<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/colorBlueGrey50">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/history_row_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp. 5.000" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/history_row_card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Card no"
        android:textSize="16sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/history_row_approval_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Approval code"
        android:textSize="16sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/history_row_trace_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trace no"
        android:textSize="16sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/history_row_transaction_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="5:45"
        android:textColor="#000000"
        android:textSize="15sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/history_row_transaction_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="5:45"
        android:textColor="#000000"
        android:textSize="15sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/history_row_transaction_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="0"
        android:textColor="#000000"
        android:textSize="15sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/history_row_transaction_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="0"
        android:textColor="#000000"
        android:textSize="15sp" />

</LinearLayout>